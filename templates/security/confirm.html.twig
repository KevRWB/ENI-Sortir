{% extends 'base.html.twig' %}

{% block title %}Confirm{% endblock %}


{% block content %}
    <div class="main-others">

        <h1>Confirmation</h1>

        <h3>Êtes-vous sûr de vouloir supprimer cette sortie ?</h3>

        <a href="{{ path('delete_event', {'id': id}) }}" onclick="DeleteEvent()" ><button class="btn-lg-perso" type="button">OUI</button></a>
        <a href="{{ path('event', {'id':id }) }}" ><button  class="btn-lg-perso" type="button">NON</button></a>

    </div>

{% endblock %}

{% block javascripts %}
    <script>
        function DeleteEvent(){
            Swal.fire({
                icon: 'error',
                title: 'Sortie supprimé',
                showConfirmButton: false,
                timer: 1750
            })
        }
    </script>

{% endblock %}
