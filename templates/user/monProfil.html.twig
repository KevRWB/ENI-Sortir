{% extends 'base.html.twig' %}

{% form_theme profilForm 'bootstrap_5_horizontal_layout.html.twig' %}

{% block title %}Profil{% endblock %}


{% block content %}
    <div class="main-others">

        <div class="sub-header">
            <div class="sub-header-left">
                <h1>Mon Profil</h1>
                <h2>{{ user.firstName }}</h2>
            </div>
            <div class="profilImgDiv">
                <img class="profile-image" src="{{ asset('images/profilePictures/' ~  user.profilePicture ) }}">
            </div>
        </div>

        {{ form_start(profilForm) }}
        {{ form_widget(profilForm) }}
        <div class="btn-flex">
            <button type="submit" class="btn-lg-perso">Modifier Profil</button>
            <a href="{{ path('homepage') }}"><button type="button" class="btn-lg-perso" >Retour</button></a>
        </div>
        {{ form_end(profilForm) }}
    </div>

{% endblock %}
